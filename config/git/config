	trustExitCode = true

[interactive]
    diffFilter = delta --color-only

[delta]
	light = false
  navigate = true

[color]
	ui = auto

[versionsort]
	suffix = -alpha
	suffix = -beta
	suffix = -canary
	suffix = -rc
	suffix = -next

